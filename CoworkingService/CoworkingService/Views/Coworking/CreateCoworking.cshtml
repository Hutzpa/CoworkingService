@model Coworking


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form asp-action="Register" asp-controller="Auth" method="post">

    <table align="center">
        <tbody>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Name"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Address"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Address" />
                    <span class="text-danger" asp-validation-for="Address"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["CoworkingType"]
                    </label>
                </td>
                <td>
                    <select asp-for="CoworkingType" asp-items="@Html.GetEnumSelectList<CoworkingType>()">
                    </select>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["PaymentType"]
                    </label>
                </td>
                <td>
                    <select asp-for="PaymentType" asp-items="@Html.GetEnumSelectList<CoworkingPaymentType>()">
                    </select>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Cost"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="Cost" />
                    <span class="text-danger" asp-validation-for="Cost"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Description"]
                    </label>
                </td>
                <td>
                    <textarea asp-for="Description"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <button class="form-control" type="submit">@Localizer["Submit"] </button>
                </td>

            </tr>
        </tbody>
    </table>
</form>
