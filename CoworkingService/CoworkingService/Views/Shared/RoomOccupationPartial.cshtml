@model RoomOccupied


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form asp-action="BookTheRoom" asp-controller="Room" method="post"
      id="roomOccupationPartialForm" data-ajax="true" data-ajax-update="#partialform" data-ajax-mode="replace">

    <table align="center">
        <tbody>
            <tr>
                <td>
                    <input type="hidden" asp-for="RoomId"/>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Title"]
                    </label>
                </td>
                <td>
                    <input class="form-control" required type="text" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["Description"]
                    </label>
                </td>
                <td>
                    <input class="form-control" required type="text" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>

                </td>
            </tr>
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["From"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="From" />
                    <span class="text-danger" asp-validation-for="From"></span>

                </td>
            </tr>     
            <tr>
                <td>
                    <label class="mb-2 mt-2 lead">
                        @Localizer["To"]
                    </label>
                </td>
                <td>
                    <input class="form-control" asp-for="To" />
                    <span class="text-danger" asp-validation-for="To"></span>

                </td>
            </tr>          
            <tr>
                <td>
                    <button class="form-control" type="submit">@Localizer["Submit"] </button>
                </td>
            </tr>
        </tbody>
    </table>
</form>