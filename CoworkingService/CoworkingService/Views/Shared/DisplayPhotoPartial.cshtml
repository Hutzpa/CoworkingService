@model string[]
@inject IConfiguration _config

@{
    string path = _config.GetSection("Path").GetSection("Images").Value;
}

<div class="d-flex justify-content-center mb-3">
    @if (Enumerable.Any(Model))
    {
        var count = Enumerable.Count(Model);
        @if (count > 1)
        {
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (byte i = 0; i <= count; i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i "></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var photo in Model)
                    {
                        var imgPath = $"{path}/{photo}";
                        <img src="@imgPath" class="d-block w-100" height="450" width="450" />
                        <div class="carousel-item">
                            <img src="..." alt="Third slide">
                        </div>
                    }
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        }
        else
        {
            var imgPath = $"{path}/{Model[0]}";
            <img src="@imgPath" class="rounded " height="450" width="450" />
        }
    }
    else
    {
        var imgPath = $"{path}/empty.png";
        <img src="@imgPath" class="rounded" height="200" width="200" />
    }
</div>